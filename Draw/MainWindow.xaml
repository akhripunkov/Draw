<Window x:Class="Draw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Draw"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="MyCanvas" Background="White">
        </Canvas>
        <Button x:Name="UpdateCanvasButton" Content="Draw Rectangle" Click="Button_Click"
                Width="100" Height="25" Margin="10"/>
        <Button x:Name="DrawEllipseButton" Content="Draw Ellipse" Click="DrawEllipseButton_Click"
                Width="100" Height="25" Margin="50,50,500,0"/>
        <Button x:Name="ClearCanvasButton" Content="Clear Canvas" Click="ClearCanvasButton_OnClick"
                Width="200" Height="25" Margin="50,50,-500,0"/>

    </Grid>
</Window>
